{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:import/errors",
        "plugin:import/warnings"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "import"
    ],
    "rules": {
        "react/react-in-jsx-scope": "off",
        "react/no-unescaped-entities": 0,
        "react/prop-types": "off",
        "no-unused-vars": [
            "warn",
            {
                "argsIgnorePattern": "req|res|next|__"
            }
        ]
    }
}